<div class="container mx-auto px-8">
<p id="notice"><%= notice %></p>

<h1 class="text-4xl font-bold text-center">Posts</h1>

<table class="table-auto">
  <thead>
    <tr>
      <th class="px-4 py-2">Title</th>
      <th class="px-4 py-2">Name</th>
      <th class="px-4 py-2">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="border px-4 py-2"><%= post.title %></td>
        <td class="border px-4 py-2"><%= post.name %></td>
        <td class="border px-4 py-2"><%= post.body %></td>
        <td class="border px-4 py-2"><%= button_to 'Show', post, method: :get,class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %></td>
        <td class="border px-4 py-2"><%= button_to 'Edit', edit_post_path(post), method: :get,class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %></td>
        <td class="border px-4 py-2"><%= button_to 'Destroy', post, {method: :delete,class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded", data: { confirm: 'Are you sure?' }} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Post', new_post_path,  {method: :get, class:"btn btn-blue"} %>


</div>