<div class="container mx-auto px-8">
<p id="notice"><%= notice %></p>

<h1 class="text-4xl font-bold text-center">Posts</h1>

<table class="table-auto">
  <thead>
    <tr>
      <th class="px-4 py-2">Title</th>
      <th class="px-4 py-2">Name</th>
      <th class="px-4 py-2">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="border px-4 py-2"><%= post.title %></td>
        <td class="border px-4 py-2"><%= post.name %></td>
        <td class="border px-4 py-2"><%= post.body %></td>
        <td class="border px-4 py-2"><%= link_to 'Show', post %></td>
        <td class="border px-4 py-2"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="border px-4 py-2"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Post', new_post_path,  {method: :get, class:"btn btn-blue"} %>

</div>